---
import { plainify } from "@/lib/utils/textConverter";
import { Image } from "astro:assets";

const { data } = Astro.props;
const { title, image } = data.data;
---

<div
  class="rounded bg-theme-light p-8 text-center dark:bg-darkmode-theme-light"
>
  {
    image && (
      <a href={`/setores/${data.slug}`}>
        <Image
          class="mx-auto mb-6 rounded"
          src={image}
          alt={title}
          width={120}
          height={120}
          format="webp"
        />
      </a>
    )
  }
  <h4 class="mb-3">
    <a href={`/setores/${data.slug}`}>{title}</a>
  </h4>
  <p class="mb-4">
    {plainify(data.body?.slice(0, 100))}
  </p>
</div>
